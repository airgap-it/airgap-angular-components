/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./out-tsc/core",
    "typeRoots": [
      "../../node_modules/@types",
      "node_modules/@types",
      "src/typings"
    ],
    "paths": {
      "rxjs": ["../../node_modules/rxjs"],
      "rxjs/*": ["../../node_modules/rxjs/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts",
    "src/typings"
  ]
}
